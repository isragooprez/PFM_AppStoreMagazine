@model IEnumerable<Magazine.Models.NsoupMagazineModels>
@{
    ViewBag.Title = "Home Page";
}



<!-- Plugin -->
<link rel="stylesheet" href="~/Template/assets/vendor/datatables-bootstrap/dataTables.bootstrap.css">
<link rel="stylesheet" href="~/Template/assets/vendor/datatables-fixedheader/dataTables.fixedHeader.css">
<link rel="stylesheet" href="~/Template/assets/vendor/datatables-responsive/dataTables.responsive.css">

<link rel="stylesheet" href="~/Template/assets/vendor/ladda-bootstrap/ladda.css">
<link href="~/Template/docs/css/buttons.css" rel="stylesheet" />
<!-- Plugin -->
<link href="~/Template/assets/vendor/ladda-bootstrap/ladda.css" rel="stylesheet">
<link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
<link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />


<script src="~/Template/assets/vendor/modernizr/modernizr.js"></script>
<script src="~/Template/assets/vendor/breakpoints/breakpoints.js"></script>
<script>
    Breakpoints();
</script>

<div class="clearfix visible-md-block"></div>


<div class="clearfix visible-md-block"></div>
@if (TempData.Peek("SuccessMessage") != null)
{
    var asdf = TempData["SuccessMessage"];
    <input id="SuccessMessage" type="hidden" value="@TempData["SuccessMessage"]" />
}
else
{
    var error = TempData["ErrorMessage"];

    <input id="ErrorMessage" type="hidden" value="@TempData["ErrorMessage"]" />
}
<div class="jumbotron text-center" style="color:white; background-color:#263238">
    <h1 class="display-4">SJR</h1>
    <p class="lead">Scimago Journal & Country Rank</p>
    <hr class="my-4">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="row" align="center">
        @Html.TextBox("filter", null, new { maxlength = 100, @class = "form-control ", placeholder = Resources.Resource.IHMarkSearch.ToString() })
        </div>
        <br>
        <!-- Example Zoom -->
        <div class="align-center">
            <div class="col-sm-pull-12">
                <div class="btn-group" aria-label="Basic example" role="group">
                    <button type="submit" class="btn btn-primary icon wb-search  ladda-button"><i class=""></i> @Resources.Resource.IHSearch</button>
                    @Html.ActionLink(Resources.Resource.IHClear.ToString(), "Index", "Home", null, new { @Class = "btn btn-primary  icon wb-format-clear ladda-button" })
                </div>
            </div>
            <!-- End Example Zoom -->
        </div>
    }
</div>

<!-- Page -->
<div class="page-content">
    <!-- Panel -->
    <div class="panel">
        <div class="panel-body">

            <!-- Example Pricing List2 -->
            <div class="example-wrap">
                <h4 class="example-title">@Resources.Resource.IHJournalsFound @ViewBag.TotalMgzFilterVirtual</h4>
                <div class="example">

                    <div class="container-fluid">
                        @if (Model != null)
                        {
                            <div class="row row-lg">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-6 col-lg-3">
                                        <div class="pricing-list text-left">
                                            <div class="pricing-header bg-blue-600">
                                                <div class="pricing-title"> @Html.DisplayFor(modelItem => item.Name)</div>
                                                <div class="pricing-price">
                                                    <img src="@Html.DisplayFor(modelItem => item.Image)" style=" width:150px;height:200px;">
                                                </div>
                                            </div>
                                            <ul class="pricing-features">
                                                <li>
                                                    <strong>    @Html.DisplayNameFor(model => model.Country) </strong> @Html.DisplayFor(modelItem => item.Country)
                                                </li>
                                                <li>
                                                    <strong>@Html.DisplayNameFor(model => model.Publisher)</strong> @Html.DisplayFor(modelItem => item.Publisher)
                                                </li>

                                            </ul>
                                            <div class="pricing-footer text-center bg-blue-grey-100">
                                                @Ajax.ActionLink(Resources.Resource.Schedule, "AddDiary", "MagazinesStore", new { url = item.Url }, new AjaxOptions { HttpMethod = "POST" }, new { @class = "btn btn-primary btn-lg" })
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <h3 style="text-align:center"> @ViewBag.Message    @ViewBag.msng</h3>
                        }
                    </div>
                </div>
            </div>
            <!-- End Example Pricing List2 -->
        </div>
    </div>
    <!-- End Panel -->
</div>

<script src="~/Template/assets/vendor/jquery/jquery.js"></script>
<script src="~/Scripts/alertify.min.js"></script>
<!-- Script -->
<script src="~/Template/assets/vendor/ladda-bootstrap/spin.js"></script>
<script src="~/Template/assets/vendor/ladda-bootstrap/ladda.js"></script>

@*<script src="~/Scripts/MicrosoftMvcAjax.js"></script>*@
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script>
    (function (document, window, $) {
        'use strict';
        $(document).ready(function () {
            var successMessage = $("#SuccessMessage").val();
            if (successMessage != "" && successMessage != null) {
                alertify.success(successMessage);
                $("#SuccessMessage").val("");
            }
            var errorMessage = $("#ErrorMessage").val();
            if (errorMessage != "" && errorMessage != null) {
                alertify.error(errorMessage);
                $("#ErrorMessage").val("");
            }


        });

    })(document, window, jQuery);
</script>



