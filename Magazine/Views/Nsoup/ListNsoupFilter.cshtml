@model IEnumerable<Magazine.Models.NsoupMagazineModels>

@{
    ViewBag.Title = "ListNsoupFilter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4 col-md-offset-4">
    <div class="form-group">
        <h3 class="col-sm-8 control-label" style="text-align:center">SJR</h3>
        <br />
        <h4 class="col-sm-8 control-label" style="text-align:center">Scimago Journal & Country Rank</h4>
        <br />
    </div>
    <form id="searchbox" class="form-horizontal" role="form" >
        <div class="form-group">
            <div class="col-sm-10 col-lg-12">
                <input style="width:800px;text-align:right;padding-right:10px;" type="text" class="form-control" id="InputMagazine" placeholder="Enter Journal Title, ISSN or Publisher Name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
            </div>
        </div>
    </form>

</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" style=" width:200px;height:200px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> My label
                    </label>
                </div>
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Inicio", "Home", null, new { @class = "btn btn-primary" })
</p>
